##########
# Config #
##########

source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'
inhibit_all_warnings!
use_frameworks!

xcodeproj 'ZugataAvatar'
workspace 'ZugataAvatar'
link_with 'ZugataAvatar', 'ZugataAvatarTests', 'ZugataAvatarUITests'

# Asynchronous image downloader with cache support as a UIImageView category
# https://github.com/rs/SDWebImage
pod 'SDWebImage', '~>3.7'

# Autolayout DSL for iOS
# https://github.com/SnapKit/SnapKit
pod 'SnapKit', '~> 0.15'

# HEX color handling as an extension for UIColor
# https://github.com/thii/SwiftColors
pod 'SwiftColors', '~> 0.3'
